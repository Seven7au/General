<script type="text/javascript">
var ans = "y";
while(ans =="y"){
var place = prompt("please enter the number of Fibonacci places that you require");
var n1 = 0;
var n2 = 1;
var i = 0;
for (i = 0; i<place; i++){
var result = n1+n2;
document.write(n1 + "<br>");

var n1 = n2;
var n2 = result;
}
var ans = prompt("Would you like another turn? y/n");
}

