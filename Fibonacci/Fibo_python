#Fibonacci number sequence generator - Seven Vinton 2015
import sys 
n1 = 0
n2 = 1
i = 0
ans = 'y'
while ans == 'y':
    place = int(raw_input("please enter the number of Fibonacci places that you require: "))
    for i in range(0,place -1):
        result = n1+n2
        print(n1)
        n1 = n2
        n2 = result
    ans = raw_input("Do you wish to continue? y/n")
    n1 = 0
    n2 = 1
if ans == 'n':
    sys.exit(0)



 
